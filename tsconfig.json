{
  "compilerOptions": {
    "lib": ["dom", "es2018", "esnext"],
    "outDir": "dist",
    "declaration": true,
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "exclude": ["./node_modules"]
}
